<?xml version="1.0"?>
<psalm>
  <projectFiles>
    <directory name="app"/>
    <ignoreFiles>
      <file name="vendor.phar"/>
      <file name="app/Posts/CustomFields.php"/>
      <file name="app/Posts/PostTypes.php"/>
      <file name="app/Theme/Widgets.php"/>
      <file name="app/Theme/Pagination.php"/>
      <file name="app/Theme/Scripts.php"/>
      <file name="app/Theme/Plugins.php"/>
      <file name="app/Theme/Menus.php"/>
      <file name="app/Theme/WpHead.php"/>
      <file name="app/Theme/Analytics.php"/>
      <file name="app/Theme/TitleTag.php"/>
      <file name="app/Theme/Media.php"/>
      <file name="app/Lib/Whippet/TemplateTags.php"/>
    </ignoreFiles>
  </projectFiles>
  <issueHandlers>
    <!-- These three will be tripped constantly because WordPress -->
    <UndefinedFunction errorLevel="suppress"/>
    <UndefinedConstant errorLevel="suppress"/>
    <UndefinedClass errorLevel="suppress"/>
    <!-- Suppress the complaint about $registrar just in this file -->
    <UndefinedGlobalVariable>
      <errorLevel type="suppress">
        <file name="app/di.php"/>
      </errorLevel>
    </UndefinedGlobalVariable>
  </issueHandlers>
</psalm>
